{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext", // Use the latest ECMAScript features
    "module": "ESNext", // Use ES modules
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and modern JavaScript libraries
    "jsx": "react-jsx", // Enable React JSX transform
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "allowSyntheticDefaultImports": true, // Allow default imports for ES modules
    "moduleResolution": "node", // Resolve modules in Node.js style
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file is treated as a module
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch statements
    "noEmit": true // Disable emitting compiled files
  },
  "include": ["src"], // Include the source directory
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}