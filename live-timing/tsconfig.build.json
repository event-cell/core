{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "../",
    "paths": {
      "*": ["*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "../client/src/utils/trpc.ts"
  ],
  "exclude": ["**/node_modules", "dist"]
} 